<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Users</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-8.col-lg-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= heading %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <%= Object.new.extend(Formular::Helper).form(model, post_url, method: :post) do |f| %>
                      <div class="col-lg-2"></div>
                      <div class="col-lg-8">
                        <%= f.row do %>
                          <%= f.input :firstname, label: "Your Name", inline_col_class: ['col-md-6'], placeholder: 'Matty' %>

                          <%= f.input :lastname, label: "Your lastname", inline_col_class: ['col-md-6'], placeholder: 'Wilkinson' %>
                        <% end %>

                        <%= f.row do %>
                          <%= f.input_group :email, label: "Your Email", inline_col_class: ['col-md-12'], placeholder: "my@email.com", left_addon: '@'%>
                        <% end %>

                        <%= f.row do %>
                          <%= f.input :address1, label: "Address line 1", inline_col_class: ['col-md-12'], placeholder: "unit/building #"%>
                        <% end %>

                        <%= f.row do %>
                          <%= f.input :address2, label: "Address line 2", inline_col_class: ['col-md-12'], placeholder: "my street"%>
                        <% end %>

                        <%= f.row do %>
                          <%= f.input :city, label: "City", inline_col_class: ['col-md-6'] %>

                          <%= f.input :postcode, label: "Postcode", inline_col_class: ['col-md-6'] %>
                        <% end %>

                        <%= f.row do %>
                          <%= f.input :state, label: "State", inline_col_class: ['col-md-6'] %>

                          <%= f.input :country, label: "Country", inline_col_class: ['col-md-6'] %>
                        <% end %>

                        <%= f.row do %>
                          <%= f.input :abn, label: "Your ABN", inline_col_class: ['col-md-12'] %>
                        <% end %>

                        <%= f.submit content: "Save", class: ["btn-primary", "btn-lg", "btn-block"]  %>
                      </div>
                      <div class="col-lg-2"></div>
                  <% end %>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
